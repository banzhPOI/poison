<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.poison.order.mapper.OrderMapper">
    <resultMap id="orderMap" type="org.poison.order.pojo.entity.Order">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="order_no" property="orderNo" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="operator_id" property="operatorId" jdbcType="VARCHAR"/>
        <result column="operator_name" property="operatorName" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="allColumns">
        id,
        order_no,
        `status`,
        create_time,
        update_time,
        operator_id,
        operator_name
    </sql>

    <insert id="addOrder">
        INSERT INTO jidu_odin.bzh_order (<include refid="allColumns"/>)
    VALUES (#{id}, #{orderNo}, #{status}, now(3), now(3), #{operatorId}, #{operatorName})
    </insert>

    <select id="findById" resultMap="orderMap">
        SELECT
        <include refid="allColumns" />
        FROM jidu_odin.bzh_order
        WHERE id = #{id}
    </select>

    <update id="updateStatusById">
        UPDATE jidu_odin.bzh_order
        SET `status` = #{status},
        update_time = now(3)
        WHERE id = #{id}
    </update>

    <update id="updateOrder">
        UPDATE jidu_odin.bzh_order
        SET operator_id = #{operatorId},
        operator_name = #{operatorName},
        update_time = now(3)
        WHERE id = #{id}
    </update>
</mapper>
